{
  "name": "playwright-automation-framework",
  "version": "1.0.0",
  "description": "Playwright Test Automation Framework with TypeScript and POM",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:dev": "ENV=dev playwright test",
    "test:stage": "ENV=stage playwright test",
    "test:prod": "ENV=production playwright test",
    "test:report": "playwright show-report",
    "auth:setup": "playwright test src/tests/auth.setup.ts",
    "codegen": "playwright codegen"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "pom"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "typescript": "^5.3.0"
  }
}
